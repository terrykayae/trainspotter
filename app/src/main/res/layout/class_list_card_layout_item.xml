<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ccc"
    android:paddingTop="8dp"
    android:layout_marginTop="16dp"
    android:elevation="2dp"
    android:paddingLeft="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            >

            <TextView
                android:id="@+id/tvClassDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="24sp"
                android:paddingRight="8dp"
                android:text="@string/class_string" />

            <TextView
                android:id="@+id/tvClassNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvClassDescription"
                android:textSize="24sp"

                android:text="class no"/>
            <TextView
                android:id="@+id/tvClassSightingCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvClassDescription"
                android:textSize="16sp"
                android:text="@string/no_sightings_logged"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

